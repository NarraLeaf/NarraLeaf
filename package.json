{
  "name": "narraleaf",
  "version": "0.0.1",
  "description": "Create your visual novel with Electron and React",
  "bin": "./dist/cli.js",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "scripts": {
    "build": "node project/esbuild.js && tsc --emitDeclarationOnly",
    "watch": "node project/esbuild.js --watch & tsc --emitDeclarationOnly --watch",
    "prepublishOnly": "yarn run build"
  },
  "packageManager": "yarn@4.4.1",
  "keywords": [
    "react",
    "electron",
    "visual-novel",
    "typescript",
    "narraleaf",
    "nvl"
  ],
  "devDependencies": {
    "@types/lodash": "^4",
    "@types/node": "^22.13.4",
    "esbuild": "0.25.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.3.2",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "lodash": "^4.17.21",
    "zod": "^3.24.2"
  }
}
