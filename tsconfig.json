{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
    }
  },
  "include": ["src"],
}
